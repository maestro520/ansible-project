global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    option  httpclose
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms

frontend http_front
    bind *:80
    default_backend docker_back

backend docker_back
{% for worker in docker_workers %}
    server docker{{ loop.index }} {{ worker }}:80 check
{% endfor %}
