###############################################################################
# Hosts generated by Ansible
###############################################################################

{% for host, data in hostvars.items() %}
{% if host != 'localhost' %}
define host{
    use                     linux-server
    host_name               {{ host }}
    alias                   {{ host }}
    address                 {{ data.ansible_host }}
    max_check_attempts      5
}
{% endif %}
{% endfor %}
