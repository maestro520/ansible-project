###############################################################################
# Services generated by Ansible
###############################################################################

{% for host in hostvars %}
{% if host != 'localhost' %}

define service{
    use                     generic-service
    host_name               {{ host }}
    service_description     Disk Root /
    check_command           check_disk_root_nrpe
}

define service{
    use                     generic-service
    host_name               {{ host }}
    service_description     Load
    check_command           check_load_nrpe
}

{% endif %}
{% endfor %}
